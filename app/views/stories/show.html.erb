<div class="row">
  <div class="col-12">
    <h2 class="col-12"><%= @story.title %></h2>
    <% if user_signed_in? %>
      <p class="col-12 text-muted"><%= @story.user.username %></p>
    <% end %>
  </div>

  <p class="col-12">
    <%= @story.body %>
  </p>

  <div class="col-12">
    <%= link_to 'Edit', edit_story_path(@story) %> |
    <%= link_to 'Back', stories_path %>
  </div>

</div>